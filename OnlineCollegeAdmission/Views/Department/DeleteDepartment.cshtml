@model CollegeAdmission.ViewModel.DepartmentViewModel

@{
    ViewBag.Title = "DeleteDepartment";
}
    <div class="form">
        <h2>Delete Department</h2>
        <h3>Are you sure you want to delete this?</h3>
        <hr />
        <table>
            <tr style="font :600">
                <td>@Html.DisplayNameFor(model => model.CollegeCode)</td>
                <td>@Html.DisplayFor(model => model.CollegeCode)</td>
            </tr>
            <tr>
                <td style="font :600">@Html.DisplayNameFor(model => model.department.DeptName)</td>
                <td>@Html.DisplayFor(model => model.department.DeptName)</td>
            </tr>
        </table>
        @using (Html.BeginForm("DeleteDepartment", "Department", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.CollegeCode)
            <input class="btn-submit" type="submit" value="Delete" />
            @Html.ActionLink("Back To List", "DisplayCollege", "Colleges")
        }
    </div>

