@model CollegeAdmission.ViewModel.DepartmentViewModel

@{
    ViewBag.Title = "AddDepartment";
}
<div class="form">
    @using (Html.BeginForm("AddDepartment", "Department", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CollegeCode)

        <h2>Department</h2>
        if (ViewData["Message"] != null)
        {
            <div style="color : green">
                @ViewData["Message"].ToString()
            </div>
        }
        @Html.LabelFor(model => model.DeptId)
        @Html.ValidationMessageFor(model => model.DeptId)<br />
        @Html.DropDownListFor(model => model.DeptId, (List<SelectListItem>)ViewBag.Dept, "--Select Dept--", new { @class = "textBox" })<br /><br />
        @Html.LabelFor(model => model.AvailableSeats)
        @Html.ValidationMessageFor(model => model.AvailableSeats)<br />
        @Html.TextBoxFor(model => model.AvailableSeats, "", new { @class = "textBox", @placeholder = "Enter Available seats", @maxlength = "4", autocomplete = "off" })<br /><br />

        <input class="btn-submit" style="margin-left: 5%" type="submit" value="Save Department" />
        @Html.ActionLink("Back to College list", "DisplayDepartmentByCollege")
    }
</div>
